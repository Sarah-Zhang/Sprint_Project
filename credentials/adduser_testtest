# add new user with username testtest
sudo adduser testtest

# switch to user testtest
sudo su - testtest

# make directory for ssh credentials and enable permissions
mkdir .ssh
chmod 700 .ssh

# create and write a key file
touch .ssh/authorized_keys
cat '$PUBLIC KEY' > .ssh/authorized_keys
## public key can be generated by: ssh-keygen -y -f private_key.pem
chmod 600 .ssh/authorized_keys
